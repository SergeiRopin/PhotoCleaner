<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DirectorySelectionGroup" TargetType="Grid">
        <Setter Property="Margin" Value="5 10 5 0"/>
    </Style>
    <Style x:Key="DirectorySelectionComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
        <Setter Property="BorderBrush" Value="#673AB7"/>
        <Setter Property="BorderThickness" Value="0 0 0 2"/>
    </Style>
    <Style x:Key="DirectorySelectionPrefixTextBlock" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Height" Value="21"/>
    </Style>
    <Style x:Key="DirectorySelectionBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="#673AB7"/>
        <Setter Property="BorderThickness" Value="0 0 0 2"/>
    </Style>
</ResourceDictionary>