<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SelectActionGroupBox" TargetType="GroupBox" BasedOn="{x:Null}">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="BorderBrush" Value="Gray" />
        <Setter Property="BorderThickness" Value="0.5" />
        <Setter Property="Height" Value="65" />
        <Setter Property="Margin" Value="0 0 30 0" />
    </Style>
    <Style x:Key="ActionControl" TargetType="WrapPanel">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="10 8 15 8" />
    </Style>
    <Style x:Key="ActionControlTextBlock" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,8,0" />
    </Style>
</ResourceDictionary>